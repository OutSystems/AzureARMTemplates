{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Deployment controller virtual machine name."
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "metadata": {
                "description": "The size of the virtual machine."
            },
            "defaultValue": "Standard_D2s_v3"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The windows admin username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The windows admin password."
            }
        },
        "virtualNetworkResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "The name of the resource group where the existing virtual network (VNET) is located."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "The name of existing virtual network (VNET)."
            }
        },
        "virtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of existing subnet where you want to deploy the virtual machine."
            }
        },
        "sqlServerName": {
            "type": "string",
            "metadata": {
                "description": "The name of Azure SQL server. CAUTION: This name must be unique within the Azure region. The deployment will fail if the name already exists."
            }
        },
        "databaseSKU": {
            "type": "string",
            "defaultValue": "S3",
            "metadata": {
                "description": "The size of the Azure SQL databases."
            }
        },
        "databaseAdministratorLogin": {
            "type": "string",
            "metadata": {
                "description": "Admin username of the Azure SQL server. CAUTION: This username cannot be identical to the virtual machine windows admin username."
            }
        },
        "databaseAdministratorPass": {
            "type": "securestring",
            "metadata": {
                "description": "The Azure SQL admin password."
            }
        },
        "databasePlatform": {
            "type": "string",
            "defaultValue": "outsystems",
            "metadata": {
                "description": "The OutSystems platform database name."
            }
        },
        "databaseSession": {
            "type": "string",
            "defaultValue": "osSession",
            "metadata": {
                "description": "The session database name."
            }
        },
        "outsystemsServerVersion": {
            "type": "string",
            "defaultValue": "10.0.904.0",
            "metadata": {
                "description": "The version of the OutSystems platform server you want to install."
            }
        },
        "outsystemsServiceStudioVersion": {
            "type": "string",
            "defaultValue": "10.0.903.0",
            "metadata": {
                "description": "The version of the OutSystems service studio you want to install."
            }
        }
    },
    "resources": [
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLServer')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Resources/sqlServer.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[parameters('sqlServerName')]"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLDatabase.Platform')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Resources/sqlServerDatabase.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "databaseName": {
                        "value": "[parameters('databasePlatform')]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLDatabase.Session')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Resources/sqlServerDatabase.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "databaseName": {
                        "value": "[parameters('databaseSession')]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLServer.FirewallRule')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Resources/sqlServerFirewallRule.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "ruleName": {
                        "value": "AllowVMPublicIP"
                    },
                    "ipAddress": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.VirtualMachine')).outputs.virtualMachinePIP.value]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.VirtualMachine')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Resources/virtualMachine.json')]"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.Controller')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'CommonTemplates/outsystemsController.json')]"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.VirtualMachine')).outputs.virtualMachineName.value]"
                    },
                    "OSDBProvider": {
                        "value": "AzureSQL"
                    },
                    "OSDBAuth": {
                        "value": "SQL"
                    },
                    "OSDBServer": {
                        "value": "[concat(reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value, '.database.windows.net')]"
                    },
                    "OSDBCatalog": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLDatabase.Platform')).outputs.databaseName.value]"
                    },
                    "OSDBSAUser": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "OSDBSAPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBSessionServer": {
                        "value": "[concat(reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value, '.database.windows.net')]"
                    },
                    "OSDBSessionCatalog": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLDatabase.Session')).outputs.databaseName.value]"
                    },
                    "OSDBSessionPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBAdminPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBRuntimePass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBLogPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSServerVersion": {
                        "value": "[trim(parameters('outsystemsServerVersion'))]"
                    },
                    "OSServiceStudioVersion": {
                        "value": "[trim(parameters('outsystemsServiceStudioVersion'))]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "virtualMachineName" : {
            "type" : "string",
            "value": "[parameters('virtualMachineName')]"
        },
        "virtualMachinePIP" : {
            "type" : "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.VirtualMachine')).outputs.virtualMachinePIP.value]"
        },
        "sqlServerNameFQDN" : {
            "type" : "string",
            "value": "[concat(reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value, '.database.windows.net')]"
        },
        "sqlServerName" : {
            "type" : "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
        },
        "privateKey" : {
            "type" : "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.Controller')).outputs.message.value]"
        }
    }
}