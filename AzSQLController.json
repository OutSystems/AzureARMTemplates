{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Name of the deployment controller virtual machine."
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "metadata": {
                "description": "Size of the deployment controller virtual machine."
            },
            "defaultValue": "Standard_D2s_v3"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin username of all Windows VMs."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Admin password of all Windows VMs."
            }
        },
        "virtualNetworkResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "The Resource Group where the existing virtual network (VNET) is located."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "The name of the existing virtual network (VNET)."
            }
        },
        "virtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The subnet where you want to deploy the deployment controller virtual machine."
            }
        },
        "sqlServerName": {
            "type": "string",
            "metadata": {
                "description": "The Azure SQL Server name. CAUTION: This name must be unique within the Azure region. The deployment will fail if the name already exists."
            }
        },
        "databaseSKU": {
            "type": "string",
            "defaultValue": "S3",
            "metadata": {
                "description": "The size of the Azure SQL databases."
            }
        },
        "databaseAdministratorLogin": {
            "type": "string",
            "metadata": {
                "description": "The Azure SQL administrator login. CAUTION: This login cannot be identical to the login of the deployment controller virtual machine."
            }
        },
        "databaseAdministratorPass": {
            "type": "securestring",
            "metadata": {
                "description": "The Azure SQL administrator login password."
            }
        },
        "databasePlatform": {
            "type": "string",
            "defaultValue": "outsystems",
            "metadata": {
                "description": "The OutSystems platform database name."
            }
        },
        "databaseSession": {
            "type": "string",
            "defaultValue": "osSession",
            "metadata": {
                "description": "The OutSystems session database name. If not specified, defaults to the database platform."
            }
        },
        "databaseLog": {
            "type": "string",
            "defaultValue": " ",
            "metadata": {
                "description": "The OutSystems log database name. If not specified, defaults to the database platform. This is only appliable to OutSystems 11. Leave this setting empty when deploying OutSystems 10."
            }
        },
        "outsystemsServerVersion": {
            "type": "string",
            "defaultValue": "11.0.108.0",
            "allowedValues": [
                "11.0.108.0",
                "10.0.904.0",
                "10.0.900.0",
                "10.0.828.0",
                "10.0.823.0",
                "10.0.816.0"
            ],
            "metadata": {
                "description": "The version of the OutSystems platform server you want to install."
            }
        },
        "outsystemsServiceStudioVersion": {
            "type": "string",
            "defaultValue": "11.0.109.0",
            "allowedValues": [
                "11.0.109.0",
                "10.0.906.0",
                "10.0.903.0",
                "10.0.902.0",
                "10.0.830.0",
                "10.0.827.0",
                "10.0.825.0",
                "10.0.822.0"
            ],
            "metadata": {
                "description": "The version of the OutSystems service studio you want to install."
            }
        }
    },
    "variables": {
        "logCatalogDepName": "[if(empty(trim(parameters('databaseLog'))), '.Outsystems.AzureSQLDatabase.Platform', '.Outsystems.AzureSQLDatabase.Log')]",
        "sessionCatalogDepName": "[if(empty(trim(parameters('databaseSession'))), '.Outsystems.AzureSQLDatabase.Platform', '.Outsystems.AzureSQLDatabase.Session')]"
    },
    "resources": [
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLServer')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServer.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[parameters('sqlServerName')]"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLDatabase.Platform')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServerDatabase.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "databaseName": {
                        "value": "[trim(parameters('databasePlatform'))]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLDatabase.Session')]",
            "apiVersion": "2015-01-01",
            "condition": "[not(empty(trim(parameters('databaseSession'))))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServerDatabase.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "databaseName": {
                        "value": "[trim(parameters('databaseSession'))]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLDatabase.Log')]",
            "apiVersion": "2015-01-01",
            "condition": "[not(empty(trim(parameters('databaseLog'))))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServerDatabase.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "databaseName": {
                        "value": "[trim(parameters('databaseLog'))]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLServer.FirewallRule')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServerFirewallRule.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "ruleName": {
                        "value": "AllowVMPublicIP"
                    },
                    "ipAddress": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.VirtualMachine')).outputs.virtualMachinePIP.value]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.VirtualMachine')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/virtualMachine.json')]"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.Controller')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'outsystemsSetup/outsystemsController.json')]"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.VirtualMachine')).outputs.virtualMachineName.value]"
                    },
                    "OSDBServer": {
                        "value": "[concat(reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value, '.database.windows.net')]"
                    },
                    "OSDBCatalog": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLDatabase.Platform')).outputs.databaseName.value]"
                    },
                    "OSDBSessionCatalog": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'), variables('sessionCatalogDepName'))).outputs.databaseName.value]"
                    },
                    "OSDBLogCatalog": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'), variables('logCatalogDepName'))).outputs.databaseName.value]"
                    },
                    "OSDBSAUser": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "OSDBSAPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBAdminPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBRuntimePass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBLogPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBSessionPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSRabbitMQUser": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "OSRabbitMQPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSServerVersion": {
                        "value": "[parameters('outsystemsServerVersion')]"
                    },
                    "OSServiceStudioVersion": {
                        "value": "[parameters('outsystemsServiceStudioVersion')]"
                    },
                    "_artifactsLocation": {
                        "value": "[deployment().properties.templateLink.uri]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "virtualMachineName": {
            "type": "string",
            "value": "[parameters('virtualMachineName')]"
        },
        "virtualMachinePIP": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.VirtualMachine')).outputs.virtualMachinePIP.value]"
        },
        "sqlServerNameFQDN": {
            "type": "string",
            "value": "[concat(reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value, '.database.windows.net')]"
        },
        "sqlServerName": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.AzureSQLServer')).outputs.serverName.value]"
        },
        "privateKey": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.Controller')).outputs.message.value]"
        }
    }
}