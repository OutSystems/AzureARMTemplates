{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string"
        },
        "OSController": {
            "type": "string",
            "defaultValue": "127.0.0.1"
        },
        "OSPrivateKey": {
            "type": "string",
            "defaultValue": " "
        },
        "OSDBServer": {
            "type": "string"
        },
        "OSDBLogServer": {
            "type": "string",
            "defaultValue": "[parameters('OSDBServer')]"
        },
        "OSDBSessionServer": {
            "type": "string",
            "defaultValue": "[parameters('OSDBServer')]"
        },
        "OSDBSAUser": {
            "type": "string"
        },
        "OSDBSAPass": {
            "type": "securestring"
        },
        "OSDBSALogUser": {
            "type": "string",
            "defaultValue": "[parameters('OSDBSAUser')]"
        },
        "OSDBSALogPass": {
            "type": "securestring",
            "defaultValue": "[parameters('OSDBSAPass')]"
        },
        "OSDBSASessionUser": {
            "type": "string",
            "defaultValue": "[parameters('OSDBSAUser')]"
        },
        "OSDBSASessionPass": {
            "type": "securestring",
            "defaultValue": "[parameters('OSDBSAPass')]"
        },
        "OSDBCatalog": {
            "type": "string",
            "defaultValue": "outsystems"
        },
        "OSDBLogCatalog": {
            "type": "string",
            "defaultValue": " "
        },
        "OSDBSessionCatalog": {
            "type": "string",
            "defaultValue": " "
        },
        "OSDBAdminUser": {
            "type": "string",
            "defaultValue": "OSADMIN"
        },
        "OSDBAdminPass": {
            "type": "securestring"
        },
        "OSDBRuntimeUser": {
            "type": "string",
            "defaultValue": "OSRUNTIME"
        },
        "OSDBRuntimePass": {
            "type": "securestring"
        },
        "OSDBLogUser": {
            "type": "string",
            "defaultValue": "OSLOG"
        },
        "OSDBLogPass": {
            "type": "securestring"
        },
        "OSDBSessionUser": {
            "type": "string",
            "defaultValue": "OSSTATE"
        },
        "OSDBSessionPass": {
            "type": "securestring"
        },
        "OSRabbitMQHost": {
            "type": "string",
            "defaultValue": "[parameters('OSController')]"
        },
        "OSRabbitMQUser": {
            "type": "string"
        },
        "OSRabbitMQPass": {
            "type": "securestring"
        },
        "OSRabbitMQVHost": {
            "type": "string",
            "defaultValue": "/OutSystems"
        },
        "OSServerVersion": {
            "type": "string"
        },
        "OSServiceStudioVersion": {
            "type": "string"
        },
        "_artifactsLocation": {
            "type": "string"
        }
    },
    "variables": {
        "OSDBLogCatalog": "[if(empty(trim(parameters('OSDBLogCatalog'))), parameters('OSDBCatalog'), parameters('OSDBLogCatalog'))]",
        "OSDBSessionCatalog": "[if(empty(trim(parameters('OSDBSessionCatalog'))), parameters('OSDBCatalog'), parameters('OSDBSessionCatalog'))]",
        "OSDBLogServer": "[if(empty(trim(parameters('OSDBLogServer'))), parameters('OSDBServer'), parameters('OSDBLogServer'))]",
        "OSDBSessionServer": "[if(empty(trim(parameters('OSDBSessionServer'))), parameters('OSDBServer'), parameters('OSDBSessionServer'))]"
    },
    "resources": [
        {
            "name": "[concat(parameters('resourceName'), '.Outsystems.CustomScriptExtension')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'),'resources/customScriptExtension.json')]"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[parameters('resourceName')]"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "fileUris": {
                        "value": "[uri(parameters('_artifactsLocation'),'outsystemsSetup/outsystemsSetupScript.ps1')]"
                    },
                    "arguments": {
                        "value": "[concat(' -OSRole \"LT\"',' -OSController \"', trim(parameters('OSController')), '\" -OSPrivateKey \"', trim(parameters('OSPrivateKey')), '\" -OSDBServer \"', trim(parameters('OSDBServer')), '\" -OSDBLogServer \"', trim(variables('OSDBLogServer')), '\" -OSDBSessionServer \"', trim(variables('OSDBSessionServer')), '\" -OSDBSAUser \"', trim(parameters('OSDBSAUser')), '\" -OSDBSAPass \"', trim(parameters('OSDBSAPass')), '\" -OSDBSALogUser \"', trim(parameters('OSDBSALogUser')), '\" -OSDBSALogPass \"', trim(parameters('OSDBSALogPass')), '\" -OSDBSASessionUser \"', trim(parameters('OSDBSASessionUser')), '\" -OSDBSASessionPass \"', trim(parameters('OSDBSASessionPass')), '\" -OSDBCatalog \"', trim(parameters('OSDBCatalog')), '\" -OSDBLogCatalog \"', trim(variables('OSDBLogCatalog')), '\" -OSDBSessionCatalog \"', trim(variables('OSDBSessionCatalog')), '\" -OSDBAdminUser \"', trim(parameters('OSDBAdminUser')), '\" -OSDBAdminPass \"', trim(parameters('OSDBAdminPass')), '\" -OSDBRuntimeUser \"', trim(parameters('OSDBRuntimeUser')), '\" -OSDBRuntimePass \"', trim(parameters('OSDBRuntimePass')), '\" -OSDBLogUser \"', trim(parameters('OSDBLogUser')), '\" -OSDBLogPass \"', trim(parameters('OSDBLogPass')), '\" -OSDBSessionUser \"', trim(parameters('OSDBSessionUser')), '\" -OSDBSessionPass \"', trim(parameters('OSDBSessionPass')), '\" -OSRabbitMQHost \"', trim(parameters('OSRabbitMQHost')), '\" -OSRabbitMQUser \"', trim(parameters('OSRabbitMQUser')), '\" -OSRabbitMQPass \"', trim(parameters('OSRabbitMQPass')), '\" -OSRabbitMQVHost \"', trim(parameters('OSRabbitMQVHost')), '\" -OSServerVersion \"', trim(parameters('OSServerVersion')), '\" -OSServiceStudioVersion \"', trim(parameters('OSServiceStudioVersion')), '\"')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "message": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/', parameters('resourceName'), '.Outsystems.CustomScriptExtension')).outputs.message.value]"
        }
    }
}