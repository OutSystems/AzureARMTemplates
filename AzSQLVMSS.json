{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Deployment controller virtual machine name."
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "metadata": {
                "description": "The size of the virtual machine."
            },
            "defaultValue": "Standard_D2s_v3"
        },
        "vmssName": {
            "type": "string",
            "metadata": {
                "description": "The name of the virtual machine scale-set."
            }
        },
        "vmssVirtualMachineSize": {
            "type": "string",
            "metadata": {
                "description": "The size of the virtual machine scale-set."
            },
            "defaultValue": "Standard_D2s_v3"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The windows admin username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The windows admin password."
            }
        },
        "virtualNetworkResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "The name of the resource group where the existing virtual network (VNET) is located."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "The name of existing virtual network (VNET)."
            }
        },
        "virtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the existing subnet where you want to deploy the virtual machine."
            }
        },
        "applicationGatewayVirtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the existing subnet for the Application Gateway. This subnet must only contain Application Gateways."
            }
        },
        "sqlServerName": {
            "type": "string",
            "metadata": {
                "description": "The name of Azure SQL server. CAUTION: This name must be unique within the Azure region. The deployment will fail if the name already exists."
            }
        },
        "databaseSKU": {
            "type": "string",
            "defaultValue": "S3",
            "metadata": {
                "description": "The size of the Azure SQL databases."
            }
        },
        "databaseAdministratorLogin": {
            "type": "string",
            "metadata": {
                "description": "Admin username of the Azure SQL server. CAUTION: This username cannot be identical to the virtual machine windows admin username."
            }
        },
        "databaseAdministratorPass": {
            "type": "securestring",
            "metadata": {
                "description": "The Azure SQL admin password."
            }
        },
        "databasePlatform": {
            "type": "string",
            "defaultValue": "outsystems",
            "metadata": {
                "description": "The OutSystems platform database name."
            }
        },
        "databaseSession": {
            "type": "string",
            "defaultValue": "osSession",
            "metadata": {
                "description": "The session database name."
            }
        },
        "outsystemsServerVersion": {
            "type": "string",
            "defaultValue": "10.0.904.0",
            "allowedValues": [
                "11.0.108.0",
                "10.0.904.0",
                "10.0.900.0",
                "10.0.828.0",
                "10.0.823.0",
                "10.0.816.0"
            ],
            "metadata": {
                "description": "The version of the OutSystems platform server you want to install."
            }
        },
        "outsystemsServiceStudioVersion": {
            "type": "string",
            "defaultValue": "10.0.906.0",
            "allowedValues": [
                "11.0.109.0",
                "10.0.906.0",
                "10.0.903.0",
                "10.0.902.0",
                "10.0.830.0",
                "10.0.827.0",
                "10.0.825.0",
                "10.0.822.0"
            ],
            "metadata": {
                "description": "The version of the OutSystems service studio you want to install."
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'AzSQLController.json')]"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    },
                    "sqlServerName": {
                        "value": "[parameters('sqlServerName')]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "databasePlatform": {
                        "value": "[parameters('databasePlatform')]"
                    },
                    "databaseSession": {
                        "value": "[parameters('databaseSession')]"
                    },
                    "outsystemsServerVersion": {
                        "value": "[trim(parameters('outsystemsServerVersion'))]"
                    },
                    "outsystemsServiceStudioVersion": {
                        "value": "[trim(parameters('outsystemsServiceStudioVersion'))]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('vmssName'), '.Outsystems.ProdEnvironmentFEVMSS')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Resources/virtualMachineScaleSets.json')]"
                    
                },
                "parameters": {
                    "vmssName": {
                        "value": "[parameters('vmssName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('vmssVirtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    },
                    "applicationGatewayVirtualNetworkSubnetName": {
                        "value": "[parameters('applicationGatewayVirtualNetworkSubnetName')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('vmssName'), '.Outsystems.ProdEnvironmentFE')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'CommonTemplates/outsystemsFrontendVMSS.json')]"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('vmssName'), '.Outsystems.ProdEnvironmentFEVMSS'))).outputs.vmssName.value]"
                    },
                    "OSDBProvider": {
                        "value": "AzureSQL"
                    },
                    "OSDBAuth": {
                        "value": "SQL"
                    },
                    "OSDBServer": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment'))).outputs.sqlServerNameFQDN.value]"
                    },
                    "OSDBCatalog": {
                        "value": "[parameters('databasePlatform')]"
                    },
                    "OSDBSAUser": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "OSDBSAPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBSessionServer": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment'))).outputs.sqlServerNameFQDN.value]"
                    },
                    "OSDBSessionCatalog": {
                        "value": "[parameters('databaseSession')]"
                    },
                    "OSDBSessionPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBAdminPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBRuntimePass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBLogPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSController": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment'))).outputs.virtualMachineName.value]"
                    },
                    "OSPrivateKey": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment'))).outputs.privatekey.value]"
                    },
                    "OSServerVersion": {
                        "value": "[trim(parameters('outsystemsServerVersion'))]"
                    },
                    "OSServiceStudioVersion": {
                        "value": "[trim(parameters('outsystemsServiceStudioVersion'))]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLServer.FirewallRule')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Resources/sqlServerFirewallRule.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.ProdEnvironment')).outputs.sqlServerName.value]"
                    },
                    "ruleName": {
                        "value": "AllowLBPublicIP"
                    },
                    "ipAddress": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('vmssName'),'.Outsystems.ProdEnvironmentFEVMSS')).outputs.loadbalancerPIP.value]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}