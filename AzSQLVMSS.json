{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "vmssName": {
            "type": "string"
        },
        "vmssVirtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "virtualNetworkResourceGroup": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualNetworkSubnetName": {
            "type": "string"
        },
        "applicationGatewayvirtualNetworkSubnetName": {
            "type": "string"
        },
        "sqlServerName": {
            "type": "string"
        },
        "databaseSKU": {
            "type": "string",
            "defaultValue": "S3"
        },
        "databaseAdministratorLogin": {
            "type": "string"
        },
        "databaseAdministratorPass": {
            "type": "securestring"
        },
        "databasePlatform": {
            "type": "string",
            "defaultValue": "outsystems"
        },
        "databaseSession": {
            "type": "string",
            "defaultValue": "osSession"
        },
        "outsystemsEnvironmentPrivatekey": {
            "type": "string",
            "defaultValue": " "
        },
        "outsystemsServerVersion": {
            "type": "string",
            "defaultValue": "10.0.904.0"
        },
        "outsystemsServiceStudioVersion": {
            "type": "string",
            "defaultValue": "10.0.903.0"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/AzSQLController.json"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    },
                    "sqlServerName": {
                        "value": "[parameters('sqlServerName')]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "databasePlatform": {
                        "value": "[parameters('databasePlatform')]"
                    },
                    "databaseSession": {
                        "value": "[parameters('databaseSession')]"
                    },
                    "outsystemsEnvironmentPrivatekey": {
                        "value": "[trim(parameters('outsystemsEnvironmentPrivatekey'))]"
                    },
                    "outsystemsServerVersion": {
                        "value": "[trim(parameters('outsystemsServerVersion'))]"
                    },
                    "outsystemsServiceStudioVersion": {
                        "value": "[trim(parameters('outsystemsServiceStudioVersion'))]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('vmssName'), '.Outsystems.ProdEnvironmentFEVMSS')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/Resources/virtualMachineScaleSets.json"
                },
                "parameters": {
                    "vmssName": {
                        "value": "[parameters('vmssName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('vmssVirtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    },
                    "applicationGatewayvirtualNetworkSubnetName": {
                        "value": "[parameters('applicationGatewayvirtualNetworkSubnetName')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('vmssName'), '.Outsystems.ProdEnvironmentFE')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/CommonTemplates/outsystemsFrontendVMSS.json"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('vmssName'), '.Outsystems.ProdEnvironmentFEVMSS'))).outputs.vmssName.value]"
                    },
                    "OSDBProvider": {
                        "value": "AzureSQL"
                    },
                    "OSDBAuth": {
                        "value": "SQL"
                    },
                    "OSDBServer": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment'))).outputs.sqlServerNameFQDN.value]"
                    },
                    "OSDBCatalog": {
                        "value": "[parameters('databasePlatform')]"
                    },
                    "OSDBSAUser": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "OSDBSAPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSDBSessionServer": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment'))).outputs.sqlServerNameFQDN.value]"
                    },
                    "OSDBSessionCatalog": {
                        "value": "[parameters('databaseSession')]"
                    },
                    "OSDBSessionPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBAdminPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBRuntimePass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBLogPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSController": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment'))).outputs.virtualMachineName.value]"
                    },
                    "OSPrivateKey": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('virtualMachineName'), '.Outsystems.ProdEnvironment'))).outputs.privatekey.value]"
                    },
                    "OSServerVersion": {
                        "value": "[trim(parameters('outsystemsServerVersion'))]"
                    },
                    "OSServiceStudioVersion": {
                        "value": "[trim(parameters('outsystemsServiceStudioVersion'))]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'), '.Outsystems.AzureSQLServer.FirewallRule')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/Resources/sqlServerFirewallRule.json"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('virtualMachineName'),'.Outsystems.ProdEnvironment')).outputs.sqlServerName.value]"
                    },
                    "ruleName": {
                        "value": "AllowLBPublicIP"
                    },
                    "ipAddress": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('vmssName'),'.Outsystems.ProdEnvironmentFEVMSS')).outputs.loadbalancerPIP.value]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}